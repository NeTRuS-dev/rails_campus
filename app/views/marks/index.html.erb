<h1>Оценки</h1>

<table>
  <thead>
    <tr>
      <th>Оценка</th>
      <th>Предмет</th>
      <th>Студент</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.value %></td>
        <td><%= mark.subject.name %></td>
        <td><%= mark.student_info.user.full_name %></td>
        <td><%= link_to 'Show', mark %></td>
        <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
        <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mark', new_mark_path %>
